    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"

        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/splashapplogo"
        android:label="Ketaby Store"
        android:roundIcon="@drawable/splashapplogo"
        android:supportsRtl="true"
        tools:replace="android:label"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SearchResults"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
        <activity android:name=".test" />
        <activity
            android:name=".activities.PdfViwerActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.DownloadsActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.AuthorInfo"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.Favourites"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.RequestNovel"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.HumanDevelopmentNovels"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.ReligiousNovels"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.TranslatedNovels"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.ArabicNovels"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.SeeFullReview"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.ReadBookActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.BookInfo"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SplashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SelectedCategory" />
    </application>

</manifest>