<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141414">
    <include
        layout="@layout/toolbar"
        android:id="@+id/bookinfotool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        android:src="@drawable/nosearchesfound"
        android:id="@+id/searchedbookImage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#fff"
        android:text="لم يتم العثور ع نتائج"
        android:id="@+id/searchedbookName"
        android:fontFamily="@font/droidkufiregular"
        android:layout_below="@id/searchedbookImage"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>